@model IEnumerable<IndexViewModel>

@{
    ViewData["Title"] = "Home Page";

    var products = Model.ToList();
}

@if (!products.Any())
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the best place for renting houses!</h1>
        <p class="lead">
            There are no houses in the system currently available
            so why don't you just add one?
        </p>
        <hr class="my-4">
    </div>
}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @if (products.Count == 0)
        {
            <p class="text-center">No replicas currently availible! You can check the <a asp-controller="Equipment" asp-action="All">equipment</a>!</p>
        }
        else
        {
            @for (int i = 0; i < products.Count; i++)
            {
                var product = products[i];
                <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                    <img class="d-block w-100" style="height:500px"
                 src="@product.ImageUrl" alt="@product.Name">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>
                            <a class="btn btn-primary" asp-controller="Gun" asp-action="Details"
                       asp-route-id="@product.Id"> @product.Name</a>
                        </h5>
                    </div>
                </div>
            }
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>