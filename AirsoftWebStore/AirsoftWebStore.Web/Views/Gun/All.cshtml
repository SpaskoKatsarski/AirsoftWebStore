@model IEnumerable<GunAllViewModel>

@{
    ViewBag.Title = "All Guns";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var gun in Model)
    {
        <div class="card col-4" style="width: 20rem;">
            <div class="card-body">
                <h5 class="card-title mt-1">@gun.Name</h5>
                <a  asp-controller="Gun" asp-action="Details" asp-route-id="@gun.Id"><img class="card-img hoverable" src="@gun.ImageUrl"></a>
                <p class="mb-0"><span class="fw-bold">Price: </span>$@gun.Price</p>
            </div>
        </div>
    }
</div>
