@model ConsumativeDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="card w-100">
        <div class="card-body">
            <img src="@Model.ImageUrl" />
            <h3 class="card-title text-center">@Model.Name</h3>
            <h4 class="card-title text-center">$@Model.Price</h4>
            <p class="mb-0"><span class="fw-bold">Description: </span>@Model.Description</p>
            <p class="mb-0"><span class="fw-bold">Availible: </span>@Model.Quantity counts</p>
        </div>

        <a asp-controller="Consumative" asp-action="Edit" asp-route-id="@Model.Id.ToString()" class="mb-3 btn btn-warning">Edit</a>
        <a asp-controller="Consumative" asp-action="Delete" asp-route-id="@Model.Id.ToString()" class="mb-3 btn btn-danger">Delete</a>

        <a asp-controller="Consumative" asp-action="All" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to all</a>
    </div>
</div>