@model UserDepositViewModel

@{
    ViewBag.Title = "Deposit Money";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<h4 class="text-center">User account: @Model.Email</h4>
<p class="text-center text-secondary fs-5">Current Amount: <span class="fw-bold">$@Model.CurrentMoney</span></p>

<section class="gradient-custom">
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center py-5">
            <div class="col-md-7 col-lg-5 col-xl-4">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-4">
                        <form asp-controller="Wallet" asp-action="Deposit">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-outline">
                                    <label asp-for="Money" class="col-form-label form-text fw-bold"></label>
                <input asp-for="Money" class="form-control">
                <span asp-validation-for="Money" class="small text-danger"></span>
                                </div>
                            </div>

                            <div class="align-content-center d-flex justify-content-between align-items-center pb-2">
                                <input class="btn btn-info btn-lg btn-rounded" type="submit" value="Deposit" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}